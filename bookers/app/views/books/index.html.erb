<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @indexs.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", "/books/#{book.id}" %></td>
             <td><%= link_to "", "/books/#{book.id}" %></td>
            <td><a data-confirm="Are you sure?" data-methood = "delete" href="/books">Destroy</a></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>


